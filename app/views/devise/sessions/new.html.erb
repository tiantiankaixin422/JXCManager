<div class="container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin'}) do |f| %>
    <h2 class="form-signin-heading">登录信息</h2>
      <%= f.text_field :username, class: "form-control", placeholder: "账号", required: true, autofocus: true%>
    <!--<div class="field">
      <%#= f.label :email %><br/>
      <%#= f.email_field :email, autofocus: true %>
    </div>-->
      <br/>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "密码", required: true%>

    <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %>
          <%= f.label '记住密码' %>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
    </div>
<% end %>

<%= render "devise/shared/links" %>
</div> <!-- /container -->