<%= render 'layouts/header' %>
<%= render 'layouts/edit_pop' %>
<!--
<p id="notice"><%= notice %></p>-->

<div id="users" class="container theme-showcase background-color-white yuanjiao yinying" role="main"><!-- 主体 -->
  <div class="container-service clearfix"><!-- 新建、搜索  -->
    <div class="container-service-header">
      <%#= button_to "新建", new_put_repertory_path, method: "get", remote: true, :class => 'btn btn-lg btn-primary', 'data-toggle' => 'modal', 'data-target' => '.bs-example-modal-lg' %>
      <%= button_to "新建", new_user_registration_path, method: "get", remote: true, :class => 'btn btn-lg btn-primary', 'data-toggle' => 'modal', 'data-target' => '.bs-example-modal-lg' %>

      <div class="container-service-header-right">
        <form class="form-inline">
          <div class="form-group">
            <div class="input-group">
              <input type="text" class="form-control" id="exampleInputAmount" placeholder="搜索内容">
            </div>
          </div>
          <button type="submit" class="btn btn-default">搜索</button>
        </form>
      </div>
</div>
  </div><!-- 新建、搜索 end -->
  <div class="table-responsive"><!-- 表格  -->
    <table class="table table-striped">
      <thead>
      <tr>
        <th>序号</th>
        <th>姓名</th>
        <th>登陆ID</th>
        <th>性别</th>
        <th>年龄</th>
        <th>职位</th>
        <th>联系电话</th>
        <th colspan="3">设置</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each_with_index do |user,index|
      %>
          <tr>
            <td><%= index+1 %></td>
            <td><%= user.name %></td>
            <td><%= user.username %></td>
            <td>
              <% if user.sex.eql? '1' %>
                男
              <% else %>
                女
              <% end %>
            </td>
            <td><%= user.age %></td>
            <td><%= user.position %></td>
            <td><%= user.mobile %></td>
            <td><%= link_to '查看', "users/#{user.id}", remote: true, 'data-toggle' => 'modal', 'data-target' => '.bs-example-modal-lg'  %></td>
            <td><%= link_to '修改', "users/#{user.id}/edit", remote: true, 'data-toggle' => 'modal', 'data-target' => '.bs-example-modal-lg' %></td>
            <td><%= link_to '删除', "users/#{user.id}", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div><!-- 表格 end -->

  <div class="container-service-footer">
    <%= paginate @users, :theme => 'my_custom_theme' %>
  </div>
</div><!-- 主体 end -->
<script type="text/javascript" charset="utf-8">
    $('#user_nav').attr('class','active');
</script>

