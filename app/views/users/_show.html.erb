<div class="modal-body">
  <div class="container-fluid">
    <div class="row show-grid"><!-- 基本信息  -->
      <h5 class="page-header margin">基本信息</h5>
      <div class="col-md-12">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">订单编号</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.order_num %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">配件代码</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.part[:code] %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">配件名称</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.part[:name] %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">配件数量</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"> <%= @put_repertory.sum %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">产品分类</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.project_class %></p>
            </div>
          </div>
        </div>
      </div>
    </div><!-- 基本信息 end -->
    <div class="row show-grid">  <!-- 物流信息  -->
      <h5 class="page-header margin">物流信息</h5>
      <div class="col-md-12">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">物流单号</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.express_num %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">到货日期</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.arrival_date %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">备注信息</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.remarks %></p>
            </div>
          </div>
        </div>
      </div>
    </div><!-- 物流信息 end -->
    <div class="row show-grid"><!-- 价格信息  -->
      <h5 class="page-header margin">价格信息</h5>
      <div class="col-md-12">
        <div class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">配件单价</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.part[:price] %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">配件总价</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.total_price %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">折扣比例</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background"><%= @put_repertory.discount %></p>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">实际扣款</label>
            <div class="col-sm-10">
              <p class="form-control-static text-background color-red"><%= @put_repertory.discount_price %></p>
            </div>
          </div>
        </div>
      </div>
    </div><!-- 基本信息 end -->
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
</div>